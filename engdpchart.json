{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
             
    "title": {
            "text": "Portion of Renewable Energy Used per GDP per Capita in 2020",
            "subtitle":["GDP per capita in 2010 prices"],
            "subtitleFontStyle":"italic",
            "subtitleFontSize":10,
            "anchor": "start",
            "color": "black"},
            
    "data": {
            "url": "https://raw.githubusercontent.com/LMac123/LMac123.github.io/main/mixgdp.csv"},

    "height": 500,
    "width": 500,   
    
    "mark": {   
        "type":"point",
        "point":true,
        "strokeWidth":1,
        "filled":true},  
    "encoding": {
        "x": {
            "field": "GDP per capita (in 2010 prices",
            "type": "quantitative",
            "title":null,
            "axis":{"grid": false}},
        "y": {
            "field": "Renewables and biofuels",
            "type": "quantitative",
            "title": null},   
        "color":{
            "field":"Renewables and biofuels",
            "type":"quantitative",
            "scale":{"scheme":"yelloworangered"}},
        "tooltip": [
            {"field": "Name",
            "type":"nominal",
            "title":"Country"},

            {"field":"Renewables and biofuels",
            "type": "quantitative",
            "title":"Portion of renewable energy used"},
            
            {"field":"GDP per capita (in 2010 prices",
            "type":"quantitative",
            "title":"GDP per Capita"}]
         }
        }